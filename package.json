{
  "name": "gratitude-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.21.1",
    "bootstrap": "^5.1.0",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "http-proxy-middleware": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^5.0.1",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "client": "react-scripts start --proxy-config setupProxy.js",
    "start": "npm run server",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "install-client": "npm install",
    "install-server": "cd server && npm install && cd ..",
    "heroku-postbuild": "npm run install-client && npm run install-server && npm run build",
    "server": "cd server && npm run server",
    "dev-server": "cd server && npm run dev-server",
    "dev": "concurrently \"npm run client\" \"npm run dev-server\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "engines": {
      "npm": ">=8.0.0 <9.0.0",
      "node": ">=16.0.0 <17.0.0"
    }
  }
}
